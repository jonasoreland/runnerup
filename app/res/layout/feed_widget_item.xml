<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_widget_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"

    android:columnCount="3"
        android:rowCount="3"
        android:columnOrderPreserved="false">


        <ImageView
            android:id="@+id/feed_widget_item_avatar"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"
            app:srcCompat="@drawable/ic_feed_avatar_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/feed_widget_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardParagraph"
        />
        <TextView
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/feed_widget_item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardAnnotation"
            android:textAlignment="gravity"
            android:layout_gravity="end" />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/feed_widget_item_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:minHeight="3dp"
            android:minLines="1"
            android:maxHeight="50dp"
            android:textSize="12sp" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/feed_widget_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/feed_widget_item_notes"
            android:layout_width="159dp"
            android:layout_height="32dp"
            android:maxLines="5"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:inputType="none"
            android:textSize="12sp" />


    </GridLayout>
