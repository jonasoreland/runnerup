<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <!--
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
         -->
    </style>
<style name="ButtonText" parent="AppTheme.Base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
</style>
<style name="ButtonTextGrey" parent="AppTheme.Base">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#222222</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
</style>
<style name="RunHeader" parent="AppTheme.Base">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold|italic</item>
</style>
<style name="RunInfo" parent="AppTheme.Base">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">right</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
</style>
<style name="FeedDateHeader" parent="AppTheme.Base">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
</style>
<style name="FeedActivitySource" parent="AppTheme.Base">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:textSize">8sp</item>
    <item name="android:textStyle">italic</item>
</style>
</resources>
