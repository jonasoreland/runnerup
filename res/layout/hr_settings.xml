<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HRSettingsActivity" >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/device"
            style="@style/RunHeader"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="@string/device_txt" />

        <TextView
            android:id="@+id/heart_rate"
            style="@style/RunHeader"
            android:layout_marginRight="3dp"
            android:gravity="right"
            android:text="@string/heart_rate_txt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout0"
        android:background="@drawable/countdown_background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView

                style="@style/RunHeader" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hr_device"
                style="@style/RunInfo"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/hr_device_txt" />

            <TextView
                android:id="@+id/hr_value"
                style="@style/RunInfo"
                android:layout_marginRight="3dp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aallaa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/scan_button"
        android:layout_below="@+id/total"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/hr_graph_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/hr_log"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/hr_log_txt" />
    </LinearLayout>

    <Button
        android:id="@+id/scan_button"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/connect_button"
        android:background="@drawable/btn_blue"
        android:text="@string/scan_button_btn" />

    <Button
        android:id="@+id/connect_button"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_green"
        android:text="@string/connect_button_btn" />

</RelativeLayout>
