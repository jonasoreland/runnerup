<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Preference
        	android:key="cue_accounts"
        	android:title="Accounts"
        	android:summary="Configure accounts">
			<intent
			    android:targetPackage="org.runnerup"
			    android:targetClass="org.runnerup.view.AccountListActivity" />
    </Preference>
    
    <Preference
        	android:key="cue_accounts"
        	android:title="Audio cues"
        	android:summary="Configure audio cues">
			<intent
			    android:targetPackage="org.runnerup"
			    android:targetClass="org.runnerup.view.AudioCueSettingsActivity" />
    </Preference>
    	    	    
    <Preference
        	android:key="cue_workouts"
        	android:title="Manage workouts"
        	android:summary="Download/edit/remove workouts">
			<intent
			    android:targetPackage="org.runnerup"
			    android:targetClass="org.runnerup.view.ManageWorkoutsActivity" />
    </Preference>
    
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_autolap_active"
        android:persistent="true"
        android:title="Autolap" />
        
	<org.runnerup.widget.TextPreference
        android:defaultValue="1000"
        android:dependency="@string/pref_autolap_active"
        android:inputType="number"
        android:key="@string/pref_autolap"
        android:persistent="true"
        android:summary="1000"
        android:title="Autolap (m)"
        android:enabled="true" />

	<CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_runneruplive_active"
        android:persistent="true"
        android:title="Enable RunnerUpLive"
        android:summary="Note, you need to connect to the account too" />
	
	<CheckBoxPreference
        android:defaultValue="true"
        android:persistent="true"
        android:key="@string/pref_keystartstop_active"
        android:title="Headset key start/stop" />
	
    <CheckBoxPreference
        android:defaultValue="false"
        android:persistent="true"
        android:key="@string/pref_countdown_active"
        android:title="Activity countdown" />

	<org.runnerup.widget.TextPreference
        android:defaultValue="15"
        android:dependency="@string/pref_countdown_active"
        android:inputType="number"
        android:key="@string/pref_countdown_time"
        android:persistent="true"
        android:summary="15"
        android:title="Countdown time (s)" />

    <ListPreference
        android:key="@string/pref_unit"
        android:persistent="true"
        android:title="Unit preference"
        android:entries="@array/unitEntries"
        android:entryValues="@array/unitValues" />

	<CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_startgps"
        android:persistent="true"
        android:title="Auto start gps" />

	<PreferenceScreen 
            android:key="second_preferencescreen"
            android:title="Advanced options">
			
	    <org.runnerup.widget.TextPreference
	        android:defaultValue="http://weide.devsparkles.se/api/Resource/"
	        android:dependency="@string/pref_runneruplive_active"
	        android:inputType="text"
	        android:key="@string/pref_runneruplive_serveradress"
	        android:persistent="true"
	        android:summary="asdf"
	        android:title="RunnerUp live adress"
	        android:enabled="true" />
	
            
	    <org.runnerup.widget.TextPreference
            android:inputType="number"
            android:key="@string/target_pace_moving_average_seconds"
            android:persistent="true"
            android:title="Target pace moving average seconds" />
	    
	    <org.runnerup.widget.TextPreference
            android:inputType="number"
            android:key="@string/target_pace_grace_seconds"
            android:persistent="true"
            android:title="Target pace grace seconds" />

    	<CheckBoxPreference
        	android:defaultValue="true"
        	android:persistent="true"
        	android:key="@string/pref_step_autolap_active"
        	android:title="Autolap during intervals" />
	    	    
    	<CheckBoxPreference
        	android:defaultValue="true"
        	android:persistent="true"
        	android:key="@string/pref_step_countdown_active"
        	android:title="Add countdown after step that ends with user press" />

		<org.runnerup.widget.TextPreference
        	android:defaultValue="15"
        	android:dependency="@string/pref_step_countdown_active"
        	android:inputType="number"
        	android:key="@string/pref_step_countdown_time"
        	android:persistent="true"
        	android:summary="15"
        	android:title="Step countdown time (s)" />
    	
    	<CheckBoxPreference
        	android:defaultValue="true"
        	android:persistent="true"
        	android:key="@string/pref_pace_graph_smoothing"
        	android:title="Smooth pace graph" />

		<org.runnerup.widget.TextPreference
        	android:defaultValue="mm(31);kz(5,13);sg(5)"
        	android:dependency="@string/pref_pace_graph_smoothing"
        	android:key="@string/pref_pace_graph_smoothing_filters"
        	android:persistent="true"
            android:inputType="none"
        	android:summary="mm(31);kz(5,13);sg(5)"
        	android:title="Smooth pace filter(s)" />
		
        <org.runnerup.widget.TextPreference
            android:defaultValue="500"
            android:inputType="number"
            android:key="@string/pref_pollInterval"
            android:persistent="true"
            android:summary="500"
            android:title="Poll intervall (ms)" />

        <org.runnerup.widget.TextPreference
            android:defaultValue="0"
            android:inputType="number"
            android:key="@string/pref_pollDistance"
            android:persistent="true"
            android:summary="0"
            android:title="Poll distance (m)" />

        <Preference android:title="Export"
            android:key="exportdb"
            android:summary="Export database to sdcard (e.g for upgrade)" />
        
        <Preference android:title="Import"
            android:key="importdb"
            android:summary="Import database from sdcard (e.g after upgrade)" />
   	</PreferenceScreen>

	<PreferenceCategory android:title="About">
		<org.runnerup.widget.AboutPreference
        	android:title="About RunnerUp"
        	android:dialogMessage="Not much to say at this point" /> 
		
		<org.runnerup.widget.AboutPreference
        	android:title="@string/Google_Play_Services_Legal_Notices"
        	android:dialogMessage="Not much to say at this point" /> 
	</PreferenceCategory>
	
</PreferenceScreen>