<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:runnerup="http://schemas.android.com/apk/res/org.runnerup"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_interval"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/tab_interval0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_audio_cue_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:key="intervalAudio"
            android:text="@string/interval_audio_cue_spinner"
            runnerup:type="spinner_txt" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/simple_types"
            android:key="interval_type"
            android:prompt="@string/simple_type"
            android:text="@string/interval_type" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="00:01:00"
            android:inputType="time"
            android:key="interval_time"
            android:prompt="@string/simple_type"
            android:text="@string/interval_time"
            runnerup:type="durationpicker" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="1000"
            android:inputType="numberDecimal"
            android:key="interval_distance"
            android:prompt="@string/simple_type"
            android:text="@string/interval_distance"
            runnerup:type="distancepicker" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_rest_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/simple_types"
            android:key="interval_rest_type"
            android:prompt="@string/simple_type"
            android:text="@string/interval_rest_type" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_rest_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="00:01:00"
            android:inputType="time"
            android:key="interval_rest_time"
            android:prompt="@string/simple_type"
            android:text="@string/interval_rest_time"
            runnerup:type="durationpicker" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_rest_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="200"
            android:inputType="numberDecimal"
            android:key="interval_rest_distance"
            android:prompt="@string/simple_type"
            android:text="@string/interval_rest_distance"
            runnerup:type="distancepicker" />

        <org.runnerup.widget.TitleSpinner
            android:id="@+id/interval_repetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="5"
            android:inputType="number"
            android:key="interval_repetitions"
            android:prompt="@string/simple_type"
            android:text="@string/interval_repetitions"
            runnerup:type="numberpicker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/interval_warmup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:enabled="false"
                android:text="@string/interval_warmup_box" />

            <CheckBox
                android:id="@+id/interval_cooldown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:enabled="false"
                android:text="@string/interval_cooldown_box" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
